
 <!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        
        <h4 class="page-title" style="text-align: center;">Cập nhật giao diện</h4>
    </div>
</div>


<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <div class="card-box">
           

            <form action="#" method="" data-parsley-validate novalidate>
                <div class="form-group">
                    <label for="">Ảnh</label>
                    <input type="file" name="" value="" placeholder="">
                </div>
                <div class="form-group">
                    <label for="userName">Tên*</label>
                    <input type="text" name="name" parsley-trigger="change" required
                           placeholder="Nhập tên" class="form-control" value="<%= product.name %>" id="">
                </div>
                <div class="form-group">
                    <label for="">Đường dẫn</label>
                    <input type="text" name="alias" value="" class="form-control" placeholder="">
                </div>
                
                <div class="form-group">
                    <label for="">Chọn dự án</label>
                    <select name="category_project" class="form-control">
                        <option value="">---Chon danh muc---</option>
                        <% for (var i = 0; i < categories.length; i++) { %>
                           <option value="<%= categories[i]._id %>" <%= product.category_id._id.equals(categories[i]._id) ? 'selected' : '' %>><%= categories[i].name %></option> 
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Số thứ tự</label>
                    <input type="number" name="stt" placeholder="" class="form-control" style="width: 100px" value="" id="">
                </div>
                <div class="form-group text-right m-b-0">
                    <button class="btn btn-primary waves-effect waves-light" type="submit">
                        Cập nhật
                    </button>
                    <button type="reset" class="btn btn-default waves-effect waves-light m-l-5">
                        Hủy
                    </button>
                </div>

            </form>
        </div>
    </div><!-- end col -->
    <div class="col-lg-3"></div>
    
</div>
<!-- end row -->