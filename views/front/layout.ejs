        <script type="text/javascript">
            function ResizeMemuMain() {
                jQuery(".subs>.subsContent>a").appendTo(".fixed-menu");
                jQuery(".subs").remove();

                var fixWidth = jQuery(".fixed-menu").outerWidth() - 30;
                var listLi = jQuery(".fixed-menu>a");

                var cWidth = 0;
                var iMax = 0;
                for (var i = 0; i < listLi.length; i++) {
                    cWidth += jQuery(listLi[i]).outerWidth();
                    if (cWidth > fixWidth) {
                        iMax = i;
                        break;
                    }
                }

                if (iMax > 0) {
                    var li2 = "<div class='subs-menu' onclick=jQuery('.subsContent').show() ><span>Xem thÃªm (<span id='countMore'>-</span>)</span><div class='subsContent'></div></div>";
                    jQuery(li2).appendTo(".fixed-menu");

                    var countMore = 0;
                    for (var i = iMax; i < listLi.length; i++) {
                        countMore++;
                        jQuery(listLi[i]).appendTo(".subsContent");
                    }
                    jQuery("#countMore").html(countMore);
                }
            }

            ResizeMemuMain();
            jQuery(window).resize(function() {
                ResizeMemuMain();
            });
        </script>
        
    </body>
